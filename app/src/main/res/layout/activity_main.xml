<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/et_number1"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:hint="@string/number1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_number2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="@string/number2"
        app:layout_constraintEnd_toEndOf="@+id/et_number1"
        app:layout_constraintStart_toStartOf="@+id/et_number1"
        app:layout_constraintTop_toBottomOf="@+id/et_number1" />

    <Button
        android:id="@+id/bt_0"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="0"
        app:layout_constraintStart_toStartOf="@+id/bt_1"
        app:layout_constraintTop_toBottomOf="@+id/bt_1" />

    <Button
        android:id="@+id/bt_divide"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="/"
        app:layout_constraintBaseline_toBaselineOf="@+id/bt_9"
        app:layout_constraintStart_toEndOf="@+id/bt_9" />

    <Button
        android:id="@+id/bt_6"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="6"
        app:layout_constraintBaseline_toBaselineOf="@+id/bt_5"
        app:layout_constraintStart_toEndOf="@+id/bt_5" />

    <Button
        android:id="@+id/bt_2"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="2"
        app:layout_constraintBaseline_toBaselineOf="@+id/bt_1"
        app:layout_constraintStart_toEndOf="@+id/bt_1" />

    <Button
        android:id="@+id/bt_multiply"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="*"
        app:layout_constraintBaseline_toBaselineOf="@+id/bt_6"
        app:layout_constraintStart_toEndOf="@+id/bt_6" />

    <Button
        android:id="@+id/bt_5"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="5"
        app:layout_constraintBaseline_toBaselineOf="@+id/bt_4"
        app:layout_constraintStart_toEndOf="@+id/bt_4" />

    <Button
        android:id="@+id/bt_plus"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="+"
        app:layout_constraintBaseline_toBaselineOf="@+id/bt_equal"
        app:layout_constraintStart_toEndOf="@+id/bt_equal" />

    <Button
        android:id="@+id/bt_dot"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="."
        app:layout_constraintBaseline_toBaselineOf="@+id/bt_0"
        app:layout_constraintStart_toEndOf="@+id/bt_0" />

    <Button
        android:id="@+id/bt_equal"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="="
        app:layout_constraintBaseline_toBaselineOf="@+id/bt_dot"
        app:layout_constraintStart_toEndOf="@+id/bt_dot" />

    <Button
        android:id="@+id/bt_minus"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="-"
        app:layout_constraintBaseline_toBaselineOf="@+id/bt_3"
        app:layout_constraintStart_toEndOf="@+id/bt_3" />

    <Button
        android:id="@+id/bt_3"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="3"
        app:layout_constraintBaseline_toBaselineOf="@+id/bt_2"
        app:layout_constraintStart_toEndOf="@+id/bt_2" />

    <Button
        android:id="@+id/bt_7"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="7"
        app:layout_constraintStart_toStartOf="@+id/et_number2"
        app:layout_constraintTop_toBottomOf="@+id/et_number2" />

    <Button
        android:id="@+id/bt_4"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="4"
        app:layout_constraintStart_toStartOf="@+id/bt_7"
        app:layout_constraintTop_toBottomOf="@+id/bt_7" />

    <Button
        android:id="@+id/bt_8"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="8"
        app:layout_constraintBaseline_toBaselineOf="@+id/bt_7"
        app:layout_constraintStart_toEndOf="@+id/bt_7" />

    <Button
        android:id="@+id/bt_9"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="9"
        app:layout_constraintBaseline_toBaselineOf="@+id/bt_8"
        app:layout_constraintStart_toEndOf="@+id/bt_8" />

    <Button
        android:id="@+id/bt_1"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="1"
        app:layout_constraintStart_toStartOf="@+id/bt_4"
        app:layout_constraintTop_toBottomOf="@+id/bt_4" />

    <TextView
        android:id="@+id/tv_operator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:text="TextView"
        app:layout_constraintEnd_toStartOf="@+id/et_number2"
        app:layout_constraintTop_toTopOf="@+id/et_number2" />

    <TextView
        android:id="@+id/tv_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:hint="@string/result"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_dot" />

</androidx.constraintlayout.widget.ConstraintLayout>